{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "typeRoots" : ["./node_modules/@types", "./src/@types"],
  },
  "include": [
    "src/**/*",
    ".eslintrc.js",
    "jest.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}